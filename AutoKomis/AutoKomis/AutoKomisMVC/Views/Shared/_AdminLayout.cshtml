<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />


    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/PrototypesStyle.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-2.2.3.intellisense.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-2.2.3.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/Menu.js")"></script>

    @RenderSection("ckeditor", required: false)
    


    
    

</head>
<body>

    <div class="container">
        <div class="row">
            <img id="logoWidth" src="../Content/Images/logo.jpg" />
            <div class="btn-group btn-group-justified">
                <div class="btn-group">
                    <a href="@Url.Action("BasicInformation", "Admin")" type="button" class="btn btn-nav">
                        <span class="glyphicon glyphicon-wrench"></span>
                        <p>Modyfikuj dane</p>
                    </a>
                </div>
                <div class="btn-group">
                    <a href="@Url.Action("AdvertismentsList", "Admin")" type="button" class="btn btn-nav">
                        <span class="glyphicon glyphicon-th-list"></span>
                        <p>Zarządzaj ofertą</p>
                    </a>
                </div>
                <div class="btn-group">
                    <a href="@Url.Action("AddAdvertisment", "Admin")" type="button" class="btn btn-nav">
                        <span class="glyphicon glyphicon-plus"></span>
                        <p>Dodaj ogłoszenie</p>
                    </a>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-nav">
                        <span class="glyphicon glyphicon-log-out"></span>
                        <p>Wyloguj</p>
                    </button>
                </div>
            </div>

            @RenderBody()

            <footer class="clearBoth">
                <nav>
                    <ul>
                        <li><a href="@Url.Action("HomePage","Home")">O nas</a></li>
                        <li><a href="@Url.Action("Contact","Home")">Kontakt</a></li>
                    </ul>
                </nav>
                <div id="footer-cd-logo">

                    <img src="@Url.Content("~/Content/Images/CarIcon.png")" />
                </div>

                <div id="footer-copyright">
                    Copyright &copy; 2016 AutoKomis
                </div>
            </footer>
        </div>


    </div>
    @RenderSection("ScriptsBottom", required: false)
</body>
</html>

