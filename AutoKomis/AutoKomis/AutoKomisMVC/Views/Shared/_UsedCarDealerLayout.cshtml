<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />

   
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/PrototypesStyle.css")" rel="stylesheet" />
    @*<script src="@Url.Content("~/Scripts/jquery-1.9.1.intellisense.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.js")"></script>*@
    <script src="~/Scripts/jquery-2.2.3.intellisense.js"></script>
    <script src="~/Scripts/jquery-2.2.3.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/Menu.js")"></script>
    @System.Web.Optimization.Styles.Render("~/bundles/themes/base")



</head>
<body>

    <div class="container">
        <div class="row">
            <img id="logoWidth" src="~/Content/Images/logo.jpg" />
            <div class="btn-group btn-group-justified">
                    <div class="btn-group" >
                        <a type="button" href="@Url.Action("HomePage", "Home")" class="btn btn-nav">
                            <span class="glyphicon glyphicon-home"></span>
                            <p>Strona główna</p>
                        </a>
                    </div>
                
                <div class="btn-group">
                    <a href="@Url.Action("AdvertismentList", "Advertisment")" type="button" class="btn btn-nav">
                        <span class="glyphicon glyphicon-th-list"></span>
                        <p>Oferta</p>
                    </a>
                </div>
                <div class="btn-group">
                    <a href="@Url.Action("Contact", "Home")" type="button" class="btn btn-nav">
                        <span class="glyphicon glyphicon-earphone"></span>
                        <p>Kontakt</p>
                    </a>
                </div>
                <div class="btn-group">
                    <a href="@Url.Action("Route", "Home")" type="button" class="btn btn-nav">
                        <span class="glyphicon glyphicon-map-marker"></span>
                        <p>Dojazd</p>
                    </a>
                </div>
            </div>

            @RenderBody()

            <footer class="clearBoth">
                <nav>
                    <ul>
                        <li><a href="@Url.Action("HomePage","Home")">O nas</a></li>
                        <li><a href="@Url.Action("Contact","Home")">Kontakt</a></li>
                    </ul>
                </nav>
                <div id="footer-cd-logo">
                   
                    <img src="@Url.Content("~/Content/Images/CarIcon.png")" />
                </div>

                <div id="footer-copyright">
                    Copyright &copy; 2016 AutoKomis
                </div>
            </footer>
        </div>


    </div>
    @RenderSection("ScriptsBottom", required: false)
</body>
</html>

